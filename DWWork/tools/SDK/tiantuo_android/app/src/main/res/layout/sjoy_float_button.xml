<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
        android:layout_width="wrap_content"   
        android:layout_height="wrap_content"            
        android:orientation="horizontal">  
 
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="46dp"
            android:layout_height="46dp" >
          
            <ImageView
                android:id="@+id/sjoy_floatbutton_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sjoy_floatbutton_logo_out" />

            <ImageView
                android:id="@+id/sjoy_floatbutton_logo"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/sjoy_floatbutton_logo" />

            <ImageView
                android:id="@+id/sjoy_floatbutton_logo_red"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/sjoy_floatbutton_red"
                android:visibility="visible" />

            
                
          </RelativeLayout>
        
    </LinearLayout>  