<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="420" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15" />

        <ImageView
            android:id="@+id/login_account_logo"
            android:layout_width="match_parent"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_height="0dp"
            android:layout_weight="85"
           android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/sjoy_login_logo" />

      <!--   <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30" /> -->

        <RelativeLayout
            android:id="@+id/login_account_input"
            style="@style/sjoy_tablerow_style"
            android:layout_marginLeft="37.5dip"
            android:layout_marginRight="37.5dip"
            android:layout_weight="80" >

            <ImageView
                android:id="@+id/login_account_usericon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:src="@drawable/sjoy_login_phone" />

            <ImageView
                android:id="@+id/login_account_select_account"
                style="@style/sjoy_dialog_imageview"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="12dip"
                android:src="@drawable/sjoy_login_down" />
            
            <ImageView 
                android:id="@+id/login_account_accountclear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="9dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:visibility="gone"
                android:layout_toLeftOf="@id/login_account_select_account"
                android:src="@drawable/sjoy_login_clear"/>

            <EditText
                android:id="@+id/login_account_loginphnumber"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dip"
                android:layout_toLeftOf="@id/login_account_accountclear"
                android:layout_toRightOf="@id/login_account_usericon"
                android:background="@null"
                android:hint="@string/sjoy_login_account_account"
                android:singleLine="true"
                android:textColor="@color/sjoy_login_text_black"
                android:textColorHint="@color/sjoy_login_text_grayse"
                android:textSize="@dimen/sjoy_login_edittext_hint" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dip"
                android:layout_alignParentBottom="true"
                android:background="@color/sjoy_login_line1" />
        </RelativeLayout>

        <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15" /> -->

        <RelativeLayout
            android:id="@+id/login_account_password_input"
            style="@style/sjoy_tablerow_style"
            android:layout_marginLeft="37.5dip"
            android:layout_marginRight="37.5dip"
            android:layout_weight="80" >

            <ImageView
                android:id="@+id/login_account_passwordicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:src="@drawable/sjoy_login_lock" />
            
             <ImageView
                 android:id="@+id/imageView1"
                 android:layout_width="30dp"
                 android:layout_height="30dp"
                 android:layout_alignParentRight="true"
                 android:layout_alignTop="@+id/login_account_passwordicon"
                 android:layout_marginRight="12dp"
                 android:paddingBottom="7.5dp"
                 android:paddingTop="5dp"
                 android:src="@drawable/sjoy_login_eye_close" />

            <EditText
                android:id="@+id/login_account_password"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/login_account_passwordicon"
                android:layout_toLeftOf="@id/imageView1"
                android:background="@null"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColor="@color/sjoy_login_text_black"
                android:hint="@string/sjoy_login_account_password"
                android:textColorHint="@color/sjoy_login_text_grayse"
                android:textSize="@dimen/sjoy_login_edittext_hint" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.2dip"
                android:layout_alignParentBottom="true"
                android:background="@color/sjoy_login_line1" />

           

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20" />

        <ImageButton
            android:id="@+id/login_account_entergame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/sjoy_login_margin"
            android:layout_marginRight="@dimen/sjoy_login_margin"
            android:layout_weight="80"
            android:background="@drawable/sjoy_btn_home_green_entergame" />

       <!--  <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" /> -->
            

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:layout_marginLeft="37.5dip"
            android:layout_marginRight="37.5dip" >

            <RelativeLayout
                android:id="@+id/login_account_regist"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:clickable="true" >

                <TextView
                    android:id="@+id/login_account_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sjoy_login_account_tips1"
                    android:textColor="@color/sjoy_login_text_gray_dark"
                    android:textSize="@dimen/sjoy_login_text_quickregist" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/login_account_tv1"
                    android:src="@drawable/sjoy_login_pen_large" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/login_account_forgetpassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:clickable="true" >

                <TextView
                    android:id="@+id/login_account_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/sjoy_login_account_tips2"
                    android:textColor="@color/sjoy_login_text_gray_dark"
                    android:textSize="@dimen/sjoy_login_text_quickregist" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/login_account_tv2"
                    android:src="@drawable/sjoy_login_question_large" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/login_account_back"
        android:layout_width="37.5dp"
        android:layout_height="37.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:src="@drawable/sjoy_login_left" />

</RelativeLayout>