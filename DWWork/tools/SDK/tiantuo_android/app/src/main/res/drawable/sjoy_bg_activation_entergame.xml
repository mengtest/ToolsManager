<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <!-- 填充的颜色 -->
            <solid android:color="@color/sjoy_bg_btn_activation_red" />
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="10px" />
            <padding android:bottom="1.5px" android:left="1.5px" android:right="1.5px" android:top="1.5px" />
            
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/sjoy_bg_btn_activation_deep_red" />
            <corners android:radius="10px" />
            <padding android:bottom="1.5px" android:left="1.5px" android:right="1.5px" android:top="1.5px" />
        </shape>
    </item>
</selector>